pipeline {
    agent any
    parameters {
            booleanParam(name: 'MODIFICATION', defaultValue: false, description: 'If you want to deploy')
        }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
         }
        stage('Deploy') {
            when {
                expression {params.MODIFICATION}
            }
            steps {
                sh '''#!/bin/bash
                mkdir -p /home/app
                cp -r ./api/target/api.jar /home/app/
                cp -r ./integration/target/integration.jar /home/app/
                java -jar -Dspring.profiles.active=prod /home/app/api.jar  &
                java -jar -Dspring.profiles.active=prod /home/app/integration.jar &
                '''
            }
        }
    }
}
