pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Run') {
            steps {
                sh 'java -jar -Dspring.profiles.active=test api/target/api.jar &'
                // Wait until launch application
                sh 'sleep 5s'
                dir('integration-tests') {
                    sh 'mvn test -PfullTests'
                }
            }
        }
    }
    post {
        success {
            echo "Test succeeded"
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: '/home/reports', reportFiles: '/integration-tests/target/cucumber-html-reports/overview-tags.html', reportName: 'Performance Test Report', reportTitles: ''])
        }
    }
}
