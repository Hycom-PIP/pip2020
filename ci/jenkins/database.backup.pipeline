pipeline {
    agent any
    parameters {
        booleanParam(name: 'BACKUP', defaultValue: false, description: 'If you want to backup data')
    }
    stages {
        stage('Backup') {
            steps {
                sh '''#!/bin/bash
                    pg_dump -p 5432 -U app appdb > backup_$(date +'%d/%m/%Y').sql
                    cp backup_$(date +'%d/%m/%Y').sql /home/app/backup
                '''
            }
        }
    }
}
