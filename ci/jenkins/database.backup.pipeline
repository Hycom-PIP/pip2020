pipeline {
    agent any
    parameters {
        booleanParam(name: 'BACKUP', defaultValue: false, description: 'If you want to backup data')
    }
    stages {
        stage('Backup') {
            steps {
                sh '''
                    #!/bin/bash
                    cat_dir = backup_$(date +'%d_%m_%Y')
                    pg_dump -p 5432 -U app appdb > /home/app/backup/{cat_dir}.sql
                '''
            }
        }
    }
}
